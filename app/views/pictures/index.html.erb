<p id="notice"><%= notice %></p>

<h1>Home画面</h1>

<table>
  <thead>
    <tr>
      <th>投稿写真</th>
      <th>つぶやき</th>
     
    </tr>
  </thead>

  <tbody class = "picture_size">
    <% @pictures.each do |picture| %>
      <tr>
        <td>
          <%= image_tag picture.image.url %>
          <p class = "size_change"><%= picture.content %></p>
          <%= hidden_field 'Edit', edit_picture_path(picture) %>
          <%= hidden_field 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="btn-group" role="group" aria-label="...">
<button type="button" class="btn btn-default"><%= link_to '新規投稿', new_picture_path %></button>
</div>
